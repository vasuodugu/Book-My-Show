pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo "Checking out code from Git..."
                git url: 'https://github.com/vasuodugu/Book-My-Show.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                echo "Building the application..."
                dir('Book-My-Show') { // üëà go inside the folder that contains pom.xml
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                dir('Book-My-Show') {
                    sh 'mvn test'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying the application..."
                // your deploy commands
            }
        }
    }

    post {
        failure {
            echo "Pipeline failed ‚ùå"
        }
        success {
            echo "Pipeline completed successfully ‚úÖ"
        }
    }
}
